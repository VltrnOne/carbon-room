# Carbon Room - SiteGround Apache Configuration
# Domain: thecarbon6.agency

# ============================================
# PASSENGER CONFIGURATION
# ============================================
# Replace 'username' with your SiteGround cPanel username
# Replace '3.9' with the Python version available on your hosting

PassengerAppRoot /home/username/thecarbon6.agency
PassengerBaseURI /
PassengerPython /home/username/virtualenv/thecarbon6.agency/3.9/bin/python

# Enable Passenger for this directory
PassengerEnabled On
PassengerAppType wsgi
PassengerStartupFile passenger_wsgi.py

# ============================================
# PYTHON APPLICATION SETTINGS
# ============================================
SetEnv ENV production
SetEnv PYTHONPATH /home/username/thecarbon6.agency

# ============================================
# SECURITY HEADERS
# ============================================
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"

    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Content Security Policy
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:;"

    # HSTS (Enable after confirming SSL works)
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# ============================================
# SSL/HTTPS REDIRECT
# ============================================
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Remove trailing slashes (except for root)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [L,R=301]
</IfModule>

# ============================================
# COMPRESSION
# ============================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
</IfModule>

# ============================================
# CACHING
# ============================================
<IfModule mod_expires.c>
    ExpiresActive On

    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"

    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"

    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
</IfModule>

# ============================================
# ERROR DOCUMENTS
# ============================================
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
ErrorDocument 503 /503.html

# ============================================
# DENY ACCESS TO SENSITIVE FILES
# ============================================
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|json|db|sqlite|log|pyc|pyo)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect vault directory
<IfModule mod_rewrite.c>
    RewriteRule ^vault/ - [F,L]
</IfModule>

# ============================================
# CORS CONFIGURATION
# ============================================
<IfModule mod_headers.c>
    SetEnvIf Origin "^https://thecarbon6\.agency$" CORS_ALLOWED=$0
    Header set Access-Control-Allow-Origin %{CORS_ALLOWED}e env=CORS_ALLOWED
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</IfModule>

# ============================================
# RATE LIMITING (via mod_evasive if available)
# ============================================
<IfModule mod_evasive24.c>
    DOSHashTableSize 3097
    DOSPageCount 2
    DOSSiteCount 50
    DOSPageInterval 1
    DOSSiteInterval 1
    DOSBlockingPeriod 10
</IfModule>
