# Carbon Room - Production Environment Configuration
# Domain: thecarbon6.agency
# Hosted on: SiteGround
#
# IMPORTANT: Copy this file to .env on production server
# DO NOT commit actual secrets to version control

# ============================================
# APPLICATION SETTINGS
# ============================================
ENV=production
DEBUG=false
APP_NAME=Carbon Room
APP_VERSION=1.0.0

# ============================================
# SERVER CONFIGURATION
# ============================================
BASE_URL=https://thecarbon6.agency
HOST=0.0.0.0
PORT=8003

# ============================================
# CORS SETTINGS
# ============================================
CORS_ORIGINS=https://thecarbon6.agency,https://www.thecarbon6.agency
CORS_ALLOW_CREDENTIALS=true

# ============================================
# SECURITY KEYS
# ============================================
# Generate with: openssl rand -base64 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32
API_KEY=CHANGE_ME_GENERATE_UNIQUE_API_KEY

# ============================================
# ENCRYPTION KEYS
# ============================================
# For vault encryption (AES-256)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_ME_GENERATE_FERNET_KEY

# ============================================
# DATABASE (if needed in future)
# ============================================
# DATABASE_URL=sqlite:///./carbon_room.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/carbon_room

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================
# FILE STORAGE
# ============================================
VAULT_DIR=/home/username/thecarbon6.agency/vault
TELEMETRY_DIR=/home/username/thecarbon6.agency/telemetry
MAX_UPLOAD_SIZE_MB=10

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_TELEMETRY=true
ENABLE_BLOCKCHAIN_HASH=true

# ============================================
# SITEGROUND SPECIFIC
# ============================================
# Path to Python virtual environment
VIRTUAL_ENV=/home/username/virtualenv/thecarbon6.agency/3.9

# ============================================
# MONITORING (Optional)
# ============================================
# SENTRY_DSN=https://your-sentry-dsn
# ANALYTICS_ID=your-analytics-id
